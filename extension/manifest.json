{
  "manifest_version": 2,
  "name": "Later it",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/"
  },
  "permissions": ["<all_urls>", "storage", "tabs"],
  "background": {
    "scripts": ["index.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "button/geo-16.png",
      "32": "button/geo-32.png"
    }
  }
}
